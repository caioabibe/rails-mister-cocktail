

<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><p><%= dose.description %> of <%=dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </p></li>
  </ul>
<% end %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %> <br>
<%= link_to "Back to cocktails list", cocktails_path %><br>
<%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
