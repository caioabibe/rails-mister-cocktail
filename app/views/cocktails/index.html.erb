<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" class="col-sm-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  </div>
  <% end %>
</div>
<h3><%= link_to 'Create new cocktail', new_cocktail_path %></h3>


